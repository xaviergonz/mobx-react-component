{
    "name": "mobx-react-component",
    "version": "2.2.0",
    "description": "Write React functional components (with hooks) + MobX for local state in a fancy way",
    "keywords": [
        "mobx",
        "observable",
        "react-component",
        "react",
        "reactjs",
        "reactive",
        "hooks",
        "observer",
        "mobxObserver"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/xaviergonz/mobx-react-component.git"
    },
    "bugs": {
        "url": "https://github.com/xaviergonz/mobx-react-component/issues"
    },
    "license": "MIT",
    "author": "Javier González Garcés",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "types": "dist/index.d.ts",
    "jsnext:main": "dist/mobxreactcomponent.esm.js",
    "module": "dist/mobxreactcomponent.esm.js",
    "unpkg": "dist/mobxreactcomponent.umd.production.min.js",
    "react-native": "dist/mobxreactcomponent.esm.js",
    "files": [
        "package.json",
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "scripts": {
        "start": "tsdx watch",
        "build": "shx cp ../../*.md . && shx cp ../../LICENSE . && tsdx build --name mobxReactComponent --format=cjs,esm,umd",
        "test": "tsdx test",
        "prettier": "prettier --write \"**/*.js\" \"**/*.ts\" \"**/*.tsx\"",
        "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" \"test/**/*.tsx\"",
        "travis": "yarn build && yarn lint && yarn test -i --coverage"
    },
    "peerDependencies": {
        "mobx": "^4.0.0 || ^5.0.0",
        "react": "^16.8.0",
        "react-dom": "^16.8.0"
    },
    "devDependencies": {
        "@testing-library/react": "^10.0.2",
        "@types/hoist-non-react-statics": "^3.3.1",
        "@types/jest": "^25.1.0",
        "@types/react": "^16.8.10",
        "@types/react-dom": "^16.8.3",
        "hoist-non-react-statics": "^3.3.0",
        "jest-mock-console": "^1.0.0",
        "mobx": "^5.9.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "shx": "^0.3.2",
        "tsdx": "^0.13.1",
        "typescript": "^3.4.1"
    },
    "dependencies": {},
    "directories": {
        "test": "test"
    }
}
